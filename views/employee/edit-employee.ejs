<%- include('../includes/head.ejs') %>
</head>

<body>

    <main>      
        <form action="/employee/<% if (editing) { %>edit-employee<% } else { %>add-employee<% } %>" method="POST" autocomplete="off">
            <div class="form-group">
                <label>Full Name</label>
                <input type="text" name="fullName" placeholder="Full Name" class="form-control" value="<% if (editing) { %><%= employee.fullName %><% } %>">
            </div>
            <div>
                
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="text" name="email" placeholder="Email" class="form-control" value="<% if (editing) { %><%= employee.email %><% } %>">
            </div>
            <div>
          
            </div>
            <div class="form-row"> 
                <div class="form-group col-md-6">
                    <label>Mobile</label>
                    <input type="text" name="mobile" placeholder="Mobile" class="form-control" value="<% if (editing) { %><%= employee.mobile %><% } %>">
                </div>
                <div class="form-group col-md-6">
                    <label>City</label>
                    <input type="text" name="city" placeholder="City" class="form-control" value="<% if (editing) { %><%= employee.city %><% } %>">
                </div>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= employee._id %>" name="employeeId">
            <% } %>
            <div class="form-group">
                <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> <% if (editing) { %>Update Employee<% } else { %>Add Employee<% } %></button>
        <a class="btn btn-secondary" href="/employee/list"><i class="fa fa-list-alt"></i> View All</a>
            </div>
        </form>
    </main>
    <%- include('../includes/end.ejs') %>